{
  "name": "cartandcheckout-server",
  "version": "1.0.0",
  "description": "Enterprise-level E-commerce Add-to-Cart backend built with Node.js, Express, TypeScript, PostgreSQL, and Redis",
  "author": "VC (programmerviva)",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "build": "nest build",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "jest --config jest.config.js",
    "test:unit": "jest --config jest.config.js --testPathPattern=unit",
    "test:integration": "jest --config jest.config.js --testPathPattern=integration",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:load": "node scripts/load-test.js",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:watch": "jest --config jest.config.js --watch",
    "test:setup": "node scripts/test-setup.js setup",
    "test:cleanup": "node scripts/test-setup.js cleanup",
    "test:reset": "node scripts/test-setup.js reset",
    "seed": "ts-node src/database/seed.ts"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/class-transformer": "^0.4.0",
    "@nestjs/class-validator": "^0.13.4",
    "@nestjs/common": "^11.1.7",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.7",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.7",
    "@prisma/client": "^6.17.1",
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.1",
    "prisma": "^6.17.1",
    "react-icons": "^5.5.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "winston": "^3.10.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^11.1.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.23",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "node",
    "express",
    "typescript",
    "postgresql",
    "redis",
    "ecommerce",
    "add-to-cart",
    "backend",
    "programmerviva"
  ]
}