{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "Enterprise-level E-commerce Add-to-Cart backend built with Node.js, Express, TypeScript, PostgreSQL, and Redis",
  "author": "Vikas Vaibhav (programmerviva)",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start": "node dist/main.js",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "jest --config jest.config.js",
    "seed": "ts-node src/database/seed.ts"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.1",
    "redis": "^4.7.0",
    "winston": "^3.10.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.5.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "node",
    "express",
    "typescript",
    "postgresql",
    "redis",
    "ecommerce",
    "add-to-cart",
    "backend",
    "programmerviva"
  ]
}
